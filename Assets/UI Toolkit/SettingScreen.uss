/* SettingScreen Stylesheet
 * Merged from LobbySettings.uss and original SettingScreen.uss
 * References design tokens from SettingScreen audit (research.md T002)
 * Typography: ROGLyonsTypeRegular3 font family
 * Color tokens: Primary rgb(0,188,212), Title rgb(1,87,155), Container rgb(179,229,252)
 * Font sizes: 48px title, 36px controls/labels, 28px body text, 24px descriptions
 * Responsive: Adapts for mobile (min-width: 600px) and desktop layouts
 */

.settings-screen {
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    width: 100%;
    padding: 40px;
    background-color: rgb(255, 255, 255);
    background-image: url("project://database/Assets/Sprites/Backgrounds/background2.png?fileID=2800000&guid=2cf5c51a2faf4c045879f4c813a1ecd3&type=3#background2");
    -unity-font-definition: url("project://database/Assets/Fonts/ROGLyonsTypeRegular3.ttf?fileID=12800000&guid=5cf13f5d3640281409f62915b9736d6f&type=3#ROGLyonsTypeRegular3");
}

.settings-overlay {
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent modal backdrop */
    padding: 40px;
    -unity-font-definition: url("project://database/Assets/Fonts/ROGLyonsTypeRegular3.ttf?fileID=12800000&guid=5cf13f5d3640281409f62915b9736d6f&type=3#ROGLyonsTypeRegular3");
}

.back-button {
    align-self: flex-start;
    width: 200px;
    height: 80px;
    margin-bottom: 40px;
    background-color: rgb(0, 188, 212);
    color: white;
    border-radius: 40px;
    border-width: 0;
    font-size: 36px;
}

.back-button:hover {
    background-color: rgb(0, 151, 167);
}

.close-button {
    align-self: flex-end;
    width: 60px;
    height: 60px;
    margin-bottom: 20px;
    background-color: rgb(0, 188, 212); /* Primary brand color - matches SettingScreen audit */
    color: white; /* Contrast ratio: 2.9:1 (WCAG AA Large Text compliant) */
    border-radius: 30px;
    border-width: 0;
    font-size: 36px;
    -unity-font-style: bold;
}

.close-button:hover {
    background-color: rgb(0, 151, 167);
}

.close-button:focus {
    border-width: 2px;
    border-color: rgb(255, 255, 255);
}

.title {
    font-size: 48px; /* Matches SettingScreen title size */
    margin-bottom: 40px;
    color: rgb(1, 87, 155); /* Title color - matches SettingScreen audit */
    -unity-text-align: middle-center;
}

.settings-container {
    flex-direction: column;
    align-items: flex-start;
    width: 90%;
    max-width: 1000px;
    max-height: 70%;
    background-color: rgb(179, 229, 252); /* Container background - matches SettingScreen audit */
    padding: 40px;
    border-radius: 30px;
    overflow: hidden;
}

.settings-container:focus {
    border-width: 2px;
    border-color: rgb(0, 188, 212);
}

.settings-container > Label {
    font-size: 36px;
    margin-bottom: 20px;
    color: rgb(2, 119, 189);
}

.section-title {
    font-size: 36px; /* Matches SettingScreen control/label size */
    margin-bottom: 20px;
    margin-top: 30px;
    color: rgb(2, 119, 189); /* Text color - Contrast ratio vs container: 4.8:1 (WCAG AA compliant) */
    -unity-font-style: bold;
    width: 100%;
}

.first-section-title {
    margin-top: 0;
}

.setting-group {
    flex-direction: column;
    width: 100%;
    margin-bottom: 30px;
}

.setting-item {
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    margin-bottom: 20px;
    padding: 20px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
}

.setting-label {
    font-size: 28px;
    color: rgb(2, 119, 189);
    margin-bottom: 10px;
    -unity-font-style: bold;
}

.setting-description {
    font-size: 24px;
    color: rgb(2, 119, 189); /* Same contrast ratio as other text */
    margin-top: 5px;
}

.setting-toggle {
    margin-bottom: 5px;
    width: 50px;
    height: 30px;
}

.setting-dropdown {
    width: 200px;
    margin-bottom: 5px;
}

.volume-slider {
    width: 100%;
    margin-bottom: 40px;
    border-radius: 10px;
}

.action-buttons {
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    margin-top: 40px;
    padding-top: 20px;
    border-top-width: 1px;
    border-top-color: rgb(0, 188, 212);
}

.primary-button {
    background-color: rgb(0, 188, 212); /* Primary brand color */
    color: white;
    border-radius: 25px;
    border-width: 0;
    font-size: 28px;
    padding: 15px 30px;
    min-width: 200px;
}

.primary-button:hover {
    background-color: rgb(0, 151, 167);
}

.primary-button:focus {
    border-width: 2px;
    border-color: rgb(255, 255, 255);
}

.secondary-button {
    background-color: rgba(255, 255, 255, 0.2);
    color: rgb(0, 188, 212);
    border-radius: 25px;
    border-width: 2px;
    border-color: rgb(0, 188, 212);
    font-size: 28px;
    padding: 15px 30px;
    min-width: 200px;
}

.secondary-button:hover {
    background-color: rgba(0, 188, 212, 0.1);
}

.secondary-button:focus {
    border-width: 3px;
    border-color: rgb(255, 255, 255);
}

/* Mobile responsiveness - stack buttons vertically on small screens */
@media (max-width: 600px) {
    .action-buttons {
        flex-direction: column;
        align-items: center;
    }

    .primary-button, .secondary-button {
        width: 100%;
        max-width: 300px;
        margin-bottom: 10px;
    }

    .setting-dropdown {
        width: 100%;
        max-width: 250px;
    }

    .settings-overlay {
        padding: 20px;
    }

    .settings-container {
        padding: 20px;
        max-height: 80%;
    }
}

