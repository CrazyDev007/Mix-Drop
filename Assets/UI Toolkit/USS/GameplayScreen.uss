.gameplay-screen {
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/ROGLyonsTypeRegular3.ttf?fileID=12800000&guid=5cf13f5d3640281409f62915b9736d6f&type=3#ROGLyonsTypeRegular3");
}

.top-bar {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 120px;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.5);
}

.left-section {
    flex-direction: row;
    align-items: center;
    flex-shrink: 1;
}

.center-section {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
}

.right-section {
    flex-direction: row;
    align-items: center;
    flex-shrink: 1;
}

.level-title {
    font-size: 40px;
    color: white;
    margin-right: 8px;
    flex-shrink: 0;
}

.level-number {
    font-size: 80px;
    color: white;
    -unity-font-style: bold;
    flex-shrink: 0;
}

.level-type-badge {
    font-size: 10px;
    font-weight: bold;
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 4px;
    margin-right: 4px;
    text-align: center;
    min-width: 50px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.level-type-badge.normal {
    background-color: rgb(76, 175, 80);
    color: white;
}

.level-type-badge.timer {
    background-color: rgb(255, 152, 0);
    color: white;
}

.level-type-badge.moves {
    background-color: rgb(33, 150, 243);
    color: white;
}

.timer {
    font-size: 40px;
    color: white;
    margin-bottom: 5px;
}

.moves {
    font-size: 40px;
    color: white;
}

.timer.warning {
    color: rgb(244, 67, 54);
    font-weight: bold;
}

.moves.warning {
    color: rgb(244, 67, 54);
    font-weight: bold;
}

.add-tube-btn {
    width: 80px;
    height: 80px;
    background-color: rgb(76, 175, 80);
    border-width: 0;
    border-radius: 8px;
    margin-left: 8px;
    background-image: url("project://database/Assets/Sprites/Add%20Tube.png?fileID=2800000&guid=a82cf85908c3a7b48b57df9651ccc70a&type=3#Add Tube");
}

.hint-btn {
    width: 80px;
    height: 80px;
    background-image: url("project://database/Assets/Sprites/Hint%20Buitton.png?fileID=2800000&guid=4c495e6fbd50f5d4bbb5047ef88e6f20&type=3#Hint Buitton");
    background-size: contain;
    border-width: 0;
    margin-left: 8px;
}

.pause-btn {
    width: 80px;
    height: 80px;
    background-image: url("project://database/Assets/Sprites/Pause%20Button.png?fileID=2800000&guid=597c2a46be2d28a45b44859a4021d47d&type=3#Pause Button");
    background-size: contain;
    border-width: 0;
    margin-left: 8px;
}
